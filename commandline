# This is for Dr.Manju

choose_doctor = input("Select the doctor")

if choose_doctor == "1":
    print("When you want to have an appointment with Dr.Manju?")
    print("\n a. At morning\n b. At afternoon \n c. At evening")
    available_time = input("Select your time")
    if available_time == "a":
        print("a. At morning")
    elif available_time == "b":
            print("b. At afternoon")
    elif available_time == "c":
            print("c. Evening")
    take_appointment = input("For taking appointment press 1 ")
    if take_appointment == "1":
        print("Appointment done with doctor")
        print("\n a. Patient checked\n b. Patient not checked")
        checked_done = input("Patient checked or not?")
        print(checked_done)
        if checked_done == "a":
            print("Patient checked")
        else:
            print("Patient not checked")
            print("Go for checking")
    elif take_appointment == "2":
        print("Appointment done with doctor")
